{
  "compilerOptions": {
    "target": "ES2019",
    "lib": ["ES2019"],
    "module": "commonjs",
    "resolveJsonModule": true,
    "declaration": false,
    "outDir": "./dist",
    "rootDir": "./src",
    "alwaysStrict": true,
    "strict": true,
    "noImplicitAny": false,
    "moduleResolution": "node",
    "types": [ "node" ],
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "pretty": true
  },
  "include": [ "src/**/*" ],
  "exclude": [ "node_modules" ]
}
